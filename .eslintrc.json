{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["next/core-web-vitals", "eslint:recommended", "plugin:react-hooks/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react-hooks"],
  "rules": {
    "no-unused-vars": "error",
    "react-hooks/exhaustive-deps": "off"
  }
}
